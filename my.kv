<CreateEvent>
    name: "create_event"
    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2
            Button:
                size_hint: .2, 1
                text: "<"
                on_release: 
                    root.manager.transition.direction = "right"
                    root.go_back()
            Label:
                text: "CREATE A NEW EVENT"
        Label:
            text: "Event Name"
        TextInput:
            multiline: False
        Label:
            text: "Event Organizer"
        TextInput:
            multiline: False
        Label:
            text: "Event Location"
        TextInput:
            multiline: False
        Label:
            text: "Start time"
        Label:
            text: "End time"

        Label: 
            text: "Date"
        GridLayout: 
            cols: 3
            Button:
                id: month_select
                text: "Month"
                on_release: root.month_popup()
            Button:
                id: day_select
                text: "Day"
                on_release: root.day_popup() 
            Button:
                id: year_select
                text: "Year"
                on_release: root.year_popup()        

        Label:
            text: "Description"
        TextInput:
            multiline: True   
        Button:
            text: "Create event"
            